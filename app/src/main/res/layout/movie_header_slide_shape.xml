<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data parent="@">

        <!-- <import type="com.sizu.mingteng.my_xianglekang.util.ImageUtils"/>-->

        <!--调用静态方法-->
        <import type="java.lang.String"/>

        <import type="com.sizu.mingteng.my_xianglekang.global.StringFormatUtil"/>

        <variable
            name="movie"
            type="com.sizu.mingteng.my_xianglekang.bean.MovieBean.SubjectsBean"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/img_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:id="@+id/ll_one_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--android:showImg='@{subjectsBean.images.large}'-->
                <!--声明 它是可以折叠的-->
                <!--app:layout_collapseMode="parallax"-->
                <!--视差因子) - 设置视差滚动因子，值为：0~1。-->
                <!--app:layout_collapseParallaxMultiplier="0.7"-->
                <ImageView
                    android:id="@+id/iv_one_photo"
                    android:layout_width="@dimen/movie_detail_width"
                    android:layout_height="@dimen/movie_detail_height"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:transitionName="@string/transition_img"

                    />

                <!--评分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@{movie.title}"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorRateRed"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_one_rating_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="@{StringFormatUtil.Average(1,movie)}"
                            android:textColor="@color/colorRateRed"/>

                        <TextView
                            android:text="@{StringFormatUtil.Average(7,movie)}"
                            android:id="@+id/tv_one_rating_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/colorWhite"/>

                    </LinearLayout>

                    <!--导演-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="43dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="导演:"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"/>

                            <View
                                android:layout_width="28dp"
                                android:layout_height="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorTheme"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_one_directors"
                            android:text="@{StringFormatUtil.Average(2,movie)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>

                    <!--主演-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主演："
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:text="@{StringFormatUtil.Average(3,movie)}"
                            android:id="@+id/tv_one_casts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textColor="@color/colorWhite"/>

                    </LinearLayout>

                    <!--类型-->
                    <TextView
                        android:text="@{StringFormatUtil.Average(4,movie)}"
                        android:id="@+id/tv_one_genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:textColor="@color/colorWhite"/>

                    <!--上映日期-->
                    <TextView
                        android:text="@{StringFormatUtil.Average(5,movie)}"
                        android:id="@+id/tv_one_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"

                        android:textColor="@color/colorWhite"/>

                    <!--制片国家/地区-->
                    <TextView
                        android:id="@+id/tv_one_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="@{StringFormatUtil.Average(6,movie)}"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>